#!/usr/bin/env bash
#
# Summary: Display the environment details of install-local
#
# Usage: install-local environment
#
# Displays install-local's system environment details.

set -e
[ -n "$INSTALL_LOCAL_TRACE" ] && set -x

info__ "INSTALL_LOCAL=${INSTALL_LOCAL}"
info__ "INSTALL_LOCAL_OS_DISTRO=${INSTALL_LOCAL_OS_DISTRO}"
info__ "INSTALL_LOCAL_OS_ARCHITECTURE=${INSTALL_LOCAL_OS_ARCHITECTURE}"
info__ "INSTALL_LOCAL_OS_VERSION=${INSTALL_LOCAL_OS_VERSION}"
info__ "INSTALL_LOCAL_PLATFORM_VERSION_PATH=${INSTALL_LOCAL_PLATFORM_VERSION_PATH}"
info__ "INSTALL_LOCAL_DESTDIR=${INSTALL_LOCAL_DESTDIR}"
info__ "INSTALL_LOCAL_TMPDIR=${INSTALL_LOCAL_TMPDIR}"
info__ "INSTALL_LOCAL_PARALLELISM=${INSTALL_LOCAL_PARALLELISM}"
info__ "INSTALL_LOCAL_TOOLS=${INSTALL_LOCAL_TOOLS}"
info__ "INSTALL_LOCAL_DEBUG=${INSTALL_LOCAL_DEBUG}"

